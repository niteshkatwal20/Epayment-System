<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartpay">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/luncher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/luncher"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartPay">
        <activity android:name=".UserProfile"></activity>
        <activity
            android:name=".SendOTPActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ForgetPassword" />
        <activity android:name=".AddMoney" />
        <activity android:name=".LandLine" />
        <activity android:name=".Internet" />
        <activity android:name=".Tv" />
        <activity android:name=".BankTransfer" />
        <activity android:name=".Hotels" />
        <activity android:name=".BusTicket" />
        <activity android:name=".MovieTicket" />
        <activity android:name=".FlightTicket" />
        <activity android:name=".Health" />
        <activity android:name=".Electricity" />
        <activity
            android:name=".UserVerification"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".SendMoney" />
        <activity android:name=".Schools" />
        <activity android:name=".RechargePhone" />
        <activity android:name=".SignIn">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUp" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>